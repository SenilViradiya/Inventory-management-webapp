# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=5001
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/inventory_management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Azure Blob Storage Configuration (Optional)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_CONTAINER_NAME=inventory-uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications and marketing)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Inventory Management System

# Alternative Email Configuration (Mailgun)
# EMAIL_SERVICE=mailgun
# MAILGUN_API_KEY=your-mailgun-api-key-here
# MAILGUN_DOMAIN=your-mailgun-domain.com

# Payment Gateway Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Subscription Configuration
DEFAULT_TRIAL_DAYS=14
SUBSCRIPTION_GRACE_PERIOD_DAYS=3

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1

# Google Cloud Storage (alternative to S3)
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_CLOUD_KEYFILE=path/to/keyfile.json
# GOOGLE_CLOUD_BUCKET=your-gcs-bucket-name

# Notification Services
PUSH_NOTIFICATION_SERVICE=firebase
FIREBASE_SERVER_KEY=your-firebase-server-key-here
FIREBASE_PROJECT_ID=your-firebase-project-id

# SMS Configuration (for alerts)
SMS_SERVICE=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
SENTRY_DSN=your-sentry-dsn-here

# API Configuration
API_VERSION=v1
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=1000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Development Tools
DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_CORS=true

# Production Security (set these in production)
SECURE_COOKIES=false
HTTPS_ONLY=false
TRUST_PROXY=false

# Business Configuration
COMPANY_NAME=Your Company Name
COMPANY_EMAIL=admin@yourdomain.com
COMPANY_PHONE=+1234567890
SUPPORT_EMAIL=support@yourdomain.com

# Feature Flags
ENABLE_SUBSCRIPTIONS=true
ENABLE_MULTI_TENANT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_AUDIT_LOGS=true
