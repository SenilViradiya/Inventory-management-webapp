# Copy this file to .env and fill in your actual values

# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=5001
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/inventory_management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Azure Blob Storage Configuration
# Get these values from your Azure Storage Account
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-account-key;EndpointSuffix=core.windows.net
AZURE_CONTAINER_NAME=inventory-uploads

# Example Azure configuration:
# 1. Create an Azure Storage Account
# 2. Get the connection string from Azure Portal > Storage Account > Access Keys
# 3. Create a container named "inventory-uploads" (or change AZURE_CONTAINER_NAME)
# 4. Set container access level to "Blob" for public read access to images
